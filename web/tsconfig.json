{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noErrorTruncation": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "composite": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "build",
    "allowJs": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules",
    "build"
  ]
}